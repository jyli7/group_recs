#recommendations_text Here are some recommendations for you and your friends!
%ul#movies.span12
  -@group_recs.each do |rec|
    %li.movie
      .image= image_tag(rec.image_url)
      .details
        .title
          %span= rec.title
          .stars{ :style => "width: #{rating_to_pixels(rec.rating)}px"}
          .clearfix
        %p.directed_by
          %strong Directed by:
          = rec.directed_by
        %p.synopsis
          %strong Synopsis:
          = rec.synopsis
      .clearfix
        -# %td=rec.trailer

